<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ledinhkhang_activityLogin">

    <ImageButton
        android:id="@+id/btBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tvDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="ĐĂNG NHẬP"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="#4507EF"
        android:textSize="42dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btBack"
        app:layout_constraintTop_toBottomOf="@+id/btBack" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmailLogin"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:hint="Nhập tên đăng nhập"
        android:textSize="30dp"
        app:helperTextTextColor="#0d6efd"
        app:boxStrokeColor="#0d6efd"
        app:boxStrokeWidthFocused="1dp"
        app:boxStrokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDangNhap">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPw"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:hint="Nhập mật khẩu"
        android:textSize="30dp"
        app:helperTextTextColor="#0d6efd"
        app:boxStrokeColor="#0d6efd"
        app:boxStrokeWidthFocused="1dp"
        app:boxStrokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutEmailLogin"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmailLogin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btDangNhap"
        android:layout_width="294dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0d6efd"
        android:text="Đăng Nhập"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutEmailLogin"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPw" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="258dp"
        android:layout_height="257dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDangNhap"
        app:srcCompat="@drawable/dangnhap" />

</androidx.constraintlayout.widget.ConstraintLayout>